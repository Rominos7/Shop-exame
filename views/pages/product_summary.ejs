<%- include('../layouts/header.ejs')  %>

<div id="mainBody">
	<div class="container">
	<div class="row">
 
		<%- include('../layouts/sidebar.ejs')  %>

	<div class="span9">
    <ul class="breadcrumb">
		<li><a href="index.html">Home</a> <span class="divider">/</span></li>
		<li class="active"> SHOPPING CART</li>
    </ul>
	<h3>  SHOPPING CART [ <small>3 Item(s) </small>]<a href="/" class="btn btn-large pull-right"><i class="icon-arrow-left"></i> Continue Shopping </a></h3>	
	<hr class="soft"/>
	
	<% if (products.length > 0) { %> <% products.forEach( product => { %>
		<table class="table table-bordered">
			<thead>
				<tr>
					<th>Product</th>
					<th>Description</th>
					<th>Quantity/Update</th>
					<th>Price</th>
					<th>Discount</th>
					<th>Total</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td> <img width="60" src="<%= product.imageUrl %>" alt="<%= product.title %>" /></td>
					<td><%= product.shortDescription %></td>
					<td>
						<div class="input-append"><input class="span1" style="max-width:34px"
								value="<%= product.cartItem.quantity %>" id="appendedInputButtons" size="16"
								type="text"><button class="btn" type="button"><i
									class="icon-minus"></i></button><button class="btn" type="button"><i
									class="icon-plus"></i></button><button class="btn btn-danger"
								type="button"><i class="icon-remove icon-white"></i></button> </div>
					</td>
					<td><%= product.price %></td>
					<td><%= product.sale %></td>
					<td><%= product.sale * product.cartItem.quantity %></td>
				</tr>
				<tr>
					<td colspan="6" style="text-align:right"><strong>TOTAL ($228 - $50 + $31) =</strong></td>
					<td class="label label-important" style="display:block"> <strong> $155.00 </strong></td>
				</tr>
			</tbody>
		</table>
		<% })} else if (Object.keys(products).length === 0 && products.constructor === Object) { %>
		<table class="table table-bordered">
			<thead>
				<tr>
					<th>Product</th>
					<th>Description</th>
					<th>Quantity/Update</th>
					<th>Price</th>
					<th>Discount</th>
					<th>Total</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td> <img width="60" src="<%= products.imageUrl %>" alt="<%= products.title %>" /></td>
					<td><%= products.shortDescription %></td>
					<td>
						<div class="input-append"><input class="span1" style="max-width:34px"
								value="<%= products.cartItem.quantity %>" id="appendedInputButtons" size="16"
								type="text"><button class="btn" type="button"><i
									class="icon-minus"></i></button><button class="btn" type="button"><i
									class="icon-plus"></i></button><button class="btn btn-danger"
								type="button"><i class="icon-remove icon-white"></i></button> </div>
					</td>
					<td><%= products.price %></td>
					<td><%= products.sale %></td>
					<td><%= products.sale * products.cartItem.quantity %></td>
				</tr>
				<tr>
					<td colspan="6" style="text-align:right"><strong>TOTAL ($228 - $50 + $31) =</strong></td>
					<td class="label label-important" style="display:block"> <strong> $155.00 </strong></td>
				</tr>
			</tbody>
		</table>
		<% } else { %>
		<h2>No products found.</h2>
		<% } %>
		<form action="/make-order" method="POST">
			<button type="submit" class="btn btn-large pull-right">Order now <i
					class="fas fa-shopping-cart"></i></button>
		</form>
	
	
</div>
</div></div>
</div>
<!-- MainBody End ============================= -->
<%- include('../layouts/footer.ejs') %>